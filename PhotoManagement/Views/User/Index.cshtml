@model IEnumerable<PhotoManagement.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Photos for @Session["Name"]</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoDescription)
        </th>
@*        <th>
            @Html.DisplayNameFor(model => model.PhotoFileName)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhotoDescription)
        </td>
@*        <td>
            @Html.DisplayFor(modelItem => item.PhotoFileName)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PhotoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PhotoId })
        </td>
    </tr>
}
</table>
@{
    if((bool)Session["Admin"]==true){
    <p>@Html.ActionLink("Back to Users","Index","Admin") | @Html.ActionLink("Add Another Photo","Create","User")</p>
}
}